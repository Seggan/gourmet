@inline
fun print(c: Char) {
    asm[Nothing]("""
        print [c];
        flushStr;
    """);
}

@inline
fun print(i: Number) {
    asm[Nothing]("""
        print [i];
        flush;
    """);
}

@inline
fun read(): Number {
    let i: Number;
    asm[Nothing]("""
        read [i];
    """);
    return i;
}

fun alloc[T](n: Number): T* {
    let amount = n * sizeof[T]();
    let ptr = asm[T*]("push $heapSize;");
    asm[Nothing]("""
        push [amount];
        for {
            @heap.push 0;
            inc $heapSize;
        };
    """);
    return ptr;
}

@inline
fun alloc[T](): T* {
    return alloc[T](1);
}